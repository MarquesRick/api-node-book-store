  "paths": {
    "/books": {
      "post": {
        "summary": "create books",
        "description": "this route will create a book",
        "tags": ["Books"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Book"
              },
              "examples": {
                "book": {
                  "value": {
                    "title": "Clean Code",
                    "author": "Robert Cecil Martin",
                    "publisher": "Prentice Hall PTR",
                    "numberPages": 431
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Book"
                  }
                }
              }
            }
          },
          "400": {
            "description": "error"
          }
        }
      },
      "get": {
        "description": "get all books",
        "summary": "get all book",
        "tags": ["Books"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "description": "get book by id",
        "summary": "get book by id",
        "tags": ["Books"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "book id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      },
      "put": {
        "description": "change book by id",
