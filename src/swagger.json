              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "delete book by id",
        "summary": "delete book by id",
        "tags": ["Books"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "book id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/book/findByTitle": {
      "get": {
        "operationId": "getPetsById",
        "description": "get book by title",
        "summary": "get book by title",
        "tags": ["Books"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "book title",
            "required": true
